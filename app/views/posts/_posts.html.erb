<div class="post_container">
  <div class="image_box">
    <%= link_to post_path(post.id) do%>
      <%= image_tag post.image.url %>
    <% end %>
  </div>
    <%= simple_format(post.text) %>
</div>
  <span class="user">ユーザー : <a href="/users/<%= post.user.id %>"><%= post.user.nickname %></a></span>
