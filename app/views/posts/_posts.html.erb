<div class="post_container">
  <div class="image_box">
    <%= link_to post_path(post.id) do%>
      <%= image_tag (post.image.variant(combine_options:{resize:"400x400^",crop:"400x400+0+0",gravity: :center}).processed) if post.image.attached? %>
    <% end %>
  </div>
    <%= simple_format(post.text) %>
</div>
<div id="likes_buttons_<%= post.id %>">
  <%= render partial: 'likes/like', locals: { post: post } %>
</div>
  <p class="user">ユーザー : <a href="/users/<%= post.user_id %>"><%= post.user.nickname %></a></p>
  <hr>