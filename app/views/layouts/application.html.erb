<!DOCTYPE html>
<html>
  <head>
    <title>Sweeeets</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <div class="header_title">
        <h1><%= link_to 'sweeeets', root_path, method: :get %></h1>
      </div>
      <div class="header_menu">
        <ul>
          <li><%= link_to '投稿する', new_post_path, method: :get%></li>
          <% if user_signed_in? %>
            <li><%= link_to 'サインアウト', destroy_user_session_path, method: :delete%></li>
            <li><%= link_to 'マイページ', user_path(current_user.id) %></li>
          <% else %>
            <li><%= link_to 'サインイン', new_user_session_path, method: :get%></li>
          <% end %>
        </ul>
      </div>
    </header>
    <%= yield %>
  </body>
</html>
